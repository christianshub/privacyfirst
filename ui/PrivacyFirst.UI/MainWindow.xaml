<Window x:Class="PrivacyFirst.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrivacyFirst - Privacy Protection Tool" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1C97EA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#555555" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <!-- Title bar -->
                <RowDefinition Height="Auto"/>
                <!-- Action buttons -->
                <RowDefinition Height="*"/>
                <!-- Operations table -->
                <RowDefinition Height="150"/>
                <!-- Output log -->
                <RowDefinition Height="25"/>
                <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#2D2D30" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PrivacyFirst"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="_" Width="40" Height="35" Click="MinimizeButton_Click"
                            Background="Transparent" BorderThickness="0" FontSize="16" Padding="0,-5,0,0"/>
                    <Button Content="□" Width="40" Height="35" Click="MaximizeButton_Click"
                            Background="Transparent" BorderThickness="0" FontSize="14"/>
                    <Button Content="✕" Width="40" Height="35" Click="CloseButton_Click"
                            Background="Transparent" BorderThickness="0" FontSize="14"/>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,10,10,5" HorizontalAlignment="Left">
                <Button Content="Enable All" Width="100" Margin="0,0,5,0" Click="EnableAll_Click"/>
                <Button Content="Disable All" Width="100" Margin="0,0,5,0" Click="DisableAll_Click"/>
                <Button Content="Run Enabled" Width="120" Margin="0,0,20,0" Click="RunEnabled_Click" Background="#4CAF50"/>
                <Button Content="Settings" Width="90" Margin="0,0,5,0" Click="Settings_Click"/>
            </StackPanel>

            <!-- Operations Table -->
            <Border Grid.Row="2" Margin="10,5,10,5" BorderBrush="#555555" BorderThickness="1" Background="#2D2D30">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="*"/>
                            <!-- Operations list -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Background="#3F3F46" Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <!-- Operation -->
                                <ColumnDefinition Width="80"/>
                                <!-- Toggle -->
                                <ColumnDefinition Width="200"/>
                                <!-- Current -->
                                <ColumnDefinition Width="200"/>
                                <!-- Original -->
                                <ColumnDefinition Width="*"/>
                                <!-- Action -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Operation" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Enabled" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Current" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBlock Grid.Column="3" Text="Original" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBlock Grid.Column="4" Text="Action" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Operations List -->
                        <ItemsControl Grid.Row="1" x:Name="OperationsList" Margin="0,0,0,5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#555555" BorderThickness="0,0,0,1" Background="#2D2D30" Height="35">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="250"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                            <CheckBox Grid.Column="1" IsChecked="{Binding IsEnabled}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CurrentValue}" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                                            <TextBlock Grid.Column="3" Text="{Binding OriginalValue}" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#888888"/>
                                            <Button Grid.Column="4" Content="{Binding ActionButtonText}" Width="80" Height="25" Margin="10,0,0,0"
                                                    HorizontalAlignment="Left" Click="ActionButton_Click" Tag="{Binding}"
                                                    Visibility="{Binding ActionButtonVisibility}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Output Log -->
            <Border Grid.Row="3" Margin="10,0,10,5" BorderBrush="#555555" BorderThickness="1" Background="#1A1A1A">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Output Log:" FontWeight="Bold" Margin="5,5,0,0"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
                        <TextBlock x:Name="OutputLog" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10" Foreground="#CCCCCC"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" Background="#2D2D30" BorderBrush="#555555" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" Text="Ready" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" x:Name="AdminStatus" Text="Admin Mode: ✓" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#4CAF50"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
